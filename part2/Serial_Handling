extern shared_vars shared;

uint8_t get_waypoints(const lon_lat_32& start, const lon_lat_32& end) {
  String startLon = String(start.lon);
  String startLat = String(start.lat);
  String endLon = String(end.lon);
  String endLat = String(end.lat);
  //list<pair<int, int>> path;
  
  String stringTogether = "R " + startLat + " " + startLon + " " + endLat + " " + endLon + "\n";
  Serial.print(stringTogether);
  Serial.flush();
  String line;
  // Serial.setTimeout(10000);
  int numCommands = 0;
  while(Serial.available() > 0){
    char data = Serial.read();
    if(data == '\n'){
      break;
    }
    line = line + data;
  }
  Serial.print(line);
  // Serial.print("HHAHAHAHHAH");
  // if(data[0] == 'N'){
  //     String val = data[2];
  //     numCommands = val.toInt();
  //     Serial.print("HAHAHAHA");
  //     Serial.flush();

  // }
  // while(numCommands != 0){
  //   Serial.readString();
  //   Serial.print("A\n");
  //   numCommands--;
  // }
  shared.num_waypoints = 0;
  return 0;
}
  
